<!DOCTYPE html>
 <html>
 <head>
   <meta charset="UTF-8">
   <title>Booker</title>
 </head>
 <body>
   <% if flash[:notice] %>
     <div class="flash">
      <%= flash[:notice] %>
     </div>
   <% end %>
   <h1>Books</h1>
   <table>
   	<tr>
   		<th>Title</th>
   		<th>Body</th>
   	</tr>
      <tbody>
         <% @books.each do |book|%>
         <tr>
           <td>
             <%= book.title %>
           </td>
           <td>
            <%= book.body %>
         </td>
         <td>
            <%=link_to 'Show', book_path(book) %>
         </td>
         <td>
            <%=link_to 'Edit', edit_book_path(book) %>
         </td>
         <td>
            <%=link_to 'Destroy', book_path(book),method: :delete %>
         </td>


         </tr>
         <% end %>
      </tbody>
   </table>


<h2>New book</h2>
<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
 <div id= "error_explanation" class="alert alert-danger">
   <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
   </ul>
</div>
<% end %>

<%= f.label :title, 'Title' %>
<%= f.text_field :title %>

<%= f.label :body, 'Body' %>
<%= f.text_area :body %><br>

<%= f.submit "Create Book" %>
<% end %>



 </body>
</html>
